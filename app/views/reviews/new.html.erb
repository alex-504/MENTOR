<div class="container padding-top">
  <div class="row review-booking">
    <div class="review-tab">
      <h2>How did it go?</h2>
      <div id="reviews">
        <% if @review.id %>
          <%= render "reviews/show", review: @review %>
        <% else %>
          <%= simple_form_for [@mentor, @review] do |f| %>
            <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
            <%= f.input :content, as: :text %>
            <%= f.submit 'Submit',  class: 'main-button' %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="booking-tab">
      <h2>Book <%= @mentor.user.name.split.first %> again</h2>
      <%= render 'consultations/form' %>
    </div>
  </div>
</div>