<h1 style="text-align: center"> Consultations </h1>
<div class="container">
  <% @consultations.each do |consultation|  %>
    <% price = consultation.duration / 30 %>
    <% total_price = price * consultation.mentor.price %>
    <div class="consultation-card">
      <div class="consultation-top-wrap">
        <div>
          <img src="https://image.flaticon.com/icons/png/512/194/194937.png" alt="avatar-large" class="avatar-large">
        </div>
        <div class="consultation-info">
          <h5>Mentor: <%= consultation.mentor.user.name%></h5>
          <p><span>Start time: </span><%= consultation.start_time&.strftime("%b %e, %l:%M %p") %></p>
          <p><span>Details: </span><%= consultation.details %></p>
          <p><span>Duration: </span><%= consultation.duration %></p>
          <p><span>Price/30min: </span>¥<%= consultation.mentor.price%></p>
          <h6>Total: ¥<%= total_price %> </h6>
        </div>
        <div class="consultation-buttons">

          <div>
            <% if consultation.status == "Pending" %>
              <p class="third-button"><%= consultation.status %> </p>
            <% elsif consultation.status == "Rejected" %>
              <p class="red-button"><%= consultation.status %> </p>
            <% else %>
              <p class="green-button"><%= consultation.status %> </p>
            <% end %>
          </div>
          <%#= link_to "Access this booking", _path, class: "main-button"  %>

          <p class="third-button">Pending</p>
          <%= link_to "Access this booking", consultation_path(consultation), class: "main-button"  %>
        </div>
      </div>
    </div>
  <% end %>
</div>










