<div id="chats-messages" data-consultation-id="<%= consultation.id %>">
  <div class="messages-wrap">
    <% consultation.messages.each do |message| %>
      <%= render "messages/message", message: message  %>
    <% end %>
  </div>
  <%= simple_form_for [ consultation, message ], remote: true do |f| %>
    <%= f.input :content, label: false, placeholder: "Chat" %>
    <%= f.submit 'send' %>
  <% end %>
</div>
